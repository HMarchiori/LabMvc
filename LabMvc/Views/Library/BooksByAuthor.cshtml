@model List<(LabMvc.Models.Book Book, bool IsAvailable, DateTime? DueDate)>

<h2 class="mb-4">Books by Author</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning">No books found for this author.</div>
}
else
{
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var (Book, IsAvailable, DueDate) in Model)
        {
            <tr>
                <td>@Book.Title</td>
                <td>
                    @if (IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Borrowed</span>
                    }
                </td>
                <td>@(DueDate?.ToString("MM/dd/yyyy") ?? "-")</td>
                <td>
                    @if (IsAvailable)
                    {
                        <form asp-controller="Library" asp-action="Borrow" method="post">
                            <input type="hidden" name="bookId" value="@Book.Id" />
                            <input type="hidden" name="authorId" value="@ViewBag.AuthorId" />
                            <button type="submit" class="btn btn-primary btn-sm">Borrow</button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Library" asp-action="Return" method="post">
                            <input type="hidden" name="bookId" value="@Book.Id" />
                            <input type="hidden" name="authorId" value="@ViewBag.AuthorId" />
                            <button type="submit" class="btn btn-warning btn-sm">Return</button>
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}